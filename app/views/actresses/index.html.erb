
<div class="container">

  <div class="search">
    <%= form_with url: "/actresses", method: :get do %>
      <div class="input-group">
        <%= search_field_tag :search, params[:search], placeholder: "Enter Actress First Name", class: "form-control" %>
          <div class="input-group-btn">
            <%= button_tag "Search", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
          </div>
      </div>
    <% end %>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="col-md-2">ID</th>
        <th class="col-md-5"> First Name</th>
        <th class="col-md-5"> Last Name</th>
      </tr>
    </thead>
    <tbody>
      <% @actresses.each do |actress| %>
        <tr>
          <td class="col-md-3"> <%= actress.id %> </td>
          <td class="col-md-3"> <%= actress.first_name %> </td>
          <td class="col-md-3"> <%= actress.last_name %> </td>

          <td class="col-md-1"> <%= link_to("Show",actress_path(actress)) %> </td>
          <td class="col-md-1"> <%= link_to("Edit", edit_actress_path(actress)) %> </td>
          <td class="col-md-1"> <%= link_to("Delete", delete_actress_path(actress)) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= will_paginate @actress, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

</div>
